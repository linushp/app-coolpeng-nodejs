<%
for (var i = 0 ; i < postList.length;i++){
var post = postList[i];
%>
<li class="ajax-load-con content">
    <div class="content-box posts-aside">
        <div class="posts-default-content">
            <div class="posts-default-title">
                <div class="post-entry-categories">
                    <% var tags = post.tags || []; tags.forEach(function(tag){%>
                    <a href="/search/tag/<%=tag%>" rel="tag"><%=tag%></a>
                    <% }); %>
                </div>
                <h2>
                    <a class="ajax-link" ajax-target=".main-body" ajax-render="server" href="/blog/post/<%=post.id%>" title="<%=post.title%>">
                        <%=post.title%>
                    </a>
                </h2>
            </div>
            <div class="posts-text">
                <%=post.contentSummary%>
            </div>
            <div class="posts-default-info">
                <ul>

                    <li class="post-author">
                        <div class="avatar"><img alt=""
                                                 src="http://cn.gravatar.com/avatar/afa39accf8700cbbe7b13e1d01aa5b17?s=50&amp;d=mm&amp;r=g"
                                                 data-original="http://cn.gravatar.com/avatar/afa39accf8700cbbe7b13e1d01aa5b17?s=50&amp;d=mm&amp;r=g"
                                                 srcset="http://cn.gravatar.com/avatar/afa39accf8700cbbe7b13e1d01aa5b17?s=100&amp;d=mm&amp;r=g 2x"
                                                 class="lazy avatar avatar-50 photo" height="50" width="50"
                                                 style="display: block;"></div>
                        <a href="http://grace.wpbyg.com/?author=1" target="_blank">suxing</a></li>
                    <li class="ico-cat"><i class="icon-list-1"></i> <a href="http://grace.wpbyg.com/?cat=12">说正经</a>
                    </li>
                    <li class="ico-time"><i class="icon-clock-1"></i> 7个月前 (10-25)</li>
                    <li class="ico-eye"><i class="icon-eye-1"></i> 413</li>
                    <li class="ico-like"><i class="icon-heart"></i> 7</li>
                </ul>
            </div>
        </div>
    </div>
</li>

<%
}
%>